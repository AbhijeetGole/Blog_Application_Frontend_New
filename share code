const mongoose = require("mongoose");
const Schema = mongoose.Schema;

const blogSchema = new Schema({
  title: {
    type: String,
    required: true,
  },
  content: {
    type: String,
    required: true,
  },
  postedDate: {
    type: Date,
    default: Date.now
  },
  blog_comments: [{ type: mongoose.Schema.Types.ObjectId, ref: "BlogComment" }],
  blog_likes: [{ user_id: mongoose.Schema.Types.ObjectId,username:String}],
  authorId: { type: Schema.Types.ObjectId, ref: "PostUser" },
  username: { type: Schema.Types.Mixed, ref: "PostUser" },
  imageUrl:{type:String}
}); 
const Blog = mongoose.model("Blog", blogSchema);
module.exports = Blog;
